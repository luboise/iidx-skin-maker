{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug with CMake",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/iidx-skin-maker", // Change this to the path of your executable
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"preLaunchTask": "CMake: build",
			"miDebuggerPath": "C:/TDM-GCC-64/bin/gdb.exe", // Change this to the path of your gdb executable
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			]
		}
	]
}